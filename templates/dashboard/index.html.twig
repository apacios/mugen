{% extends 'base.html.twig' %}

{% block title %}Hello DashboardController!{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">Categories</div>
        <div class="card-body">
            {% for category in categories %}
                <p>{{ category.name }}</p>
            {% endfor %}
        </div>
    </div>

    <div class="row">
        {% for key, video in videos %}
            <div class="col-4">
                <div class="card">
                    <div class="card-header">{{ video.name }}</div>
                    <div class="card-body">
                        <video poster="/thumbnails/{{ video.id }}.jpg" controls width="250" preload="true">
                            <source src="{{ video.path }}" type="video/avi">
                        </video>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
